{
	"name": "together-project-server",
	"version": "1.0.0",
	"description": "Study Together Project Server",
	"main": "index.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"build": "npx tsc",
		"start": "cross-env NODE_ENV=production node ./dist/index.js",
		"dev": "cross-env NODE_ENV=development node ./dist/index.js",
		"local": "cross-env NODE_ENV=local nodemon index.ts",
		"lint": "eslint ./**/*.ts",
		"format": "eslint ./**/*.ts --fix",
		"prepare": "husky install",
		"migration:production": "NODE_ENV=production npx sequelize-cli db:create && NODE_ENV=production npx sequelize-cli db:migrate",
		"migration:development": "NODE_ENV=development npx sequelize-cli db:create && NODE_ENV=development npx sequelize-cli db:migrate",
		"migration:local": "NODE_ENV=local npx sequelize-cli db:create && NODE_ENV=local npx sequelize-cli db:migrate",
		"model:generate": "NODE_ENV=local npx sequelize-cli model:generate"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"dotenv": "^16.4.5",
		"express": "^4.18.3",
		"mysql2": "^3.9.2",
		"sequelize": "^6.37.1",
		"sequelize-cli": "^6.6.2"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/node": "^20.11.24",
		"@types/sequelize": "^4.28.20",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.4.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.57.0",
		"eslint-config-standard-with-typescript": "^43.0.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-n": "^15.7.0",
		"eslint-plugin-promise": "^6.1.1",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"nodemon": "^3.1.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3"
	}
}
